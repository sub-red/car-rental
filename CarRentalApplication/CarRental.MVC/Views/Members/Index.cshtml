@model CarRental.MVC.Models.MemberIndexVm

@{
    ViewData["Title"] = "Index";
}

<h1 class="h2">Member List</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary btn-block mt-5">Create new member</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Adress</th>
            <th>Drivers License</th>
            <th>Member-Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriversLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberCard.MemberStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            }
        </tbody>
</table>
